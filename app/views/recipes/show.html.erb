<h1><%= @recipe.title %></h1>

<p><%= @recipe.rating %></p>

<p><%= @recipe.ingredients %></p>

<p><%= @recipe.instructions %></p>

<a><%= link_to "Edit", edit_recipe_path(@recipe) %></a> |
<a><%= link_to "Delete", recipe_path(@recipe),
  :data => {:confirm => "You sure?",
  :method => "delete"} %></a>

<p><%= link_to "Return to recipes", recipes_path %></p>
